<article>
  <header>
    <h1 class="page-title"><%= @category.name %></h1>
  </header>

  <%= link_to "#{image_tag(@category.photo_url)}".html_safe, category_path, class: "category-img" %>

  <% @products_by_category.each do | product | %>
    <ul>
      <li><%= link_to product.name, product_path(product.id) %></li>
    </ul>
  <% end %>
</article>
