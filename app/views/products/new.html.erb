<!-- This should only be visible to logged in users. -->
<article>
  <header>
    <h1 class="page-title">Hi, <%= @current_user.name %>! You're making a new product!</h1>
  </header>

<section>
  <h4>Please add a category if you do not see an appropriate one for your product below:</h4>
  <ul>
    <% @all_categories.each do | category | %>
      <li><%= category.name %></li>
    <% end %>
  </ul>
  <%= link_to "Add a Category", new_category_path %>
</section>


  <%= render partial: "form", locals: { http_method: :post } %>
</article>
