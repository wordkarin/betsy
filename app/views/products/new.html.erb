<!-- This should only be visible to logged in users. -->
<article>
  <header>
    <h1 class="page-title">Hi, <%= @current_user.name %>! You're making a new product!</h1>
  </header>

  <section>
    <h5>Please add a category if you do not see an appropriate one for your product below:</h5>
  <div class="row">
    <ol>
      <% @all_categories.each do | category | %>
        <li class="small-3 columns"><%= category.name %></li>
      <% end %>
    </ol>
    <%= link_to "Add a Category", new_category_path, class: "button" %>
  </div>
  </section>
  <section>
    <%= render partial: "form", locals: { http_method: :post } %>
  </section>
</article>
