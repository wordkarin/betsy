<article>
  <header class="page-title">
    <h1 class="page-title"><%= "Reviews for #{@product.name}" %></h1>
  </header>

  <section class="new-table cream-background change-font">
    <% @reviews_by_product.each do | review | %>
      <p><%= "#{review.title}" %></p>
      <p><%= "#{review.rating}" %></p>
      <p><%= "#{review.body}" %></p>
    <% end %>
  </section>

  <%= link_to "Add a Review", new_product_review_path(params[:product_id]), class: "button" %>
</article>
