<h1><%= "Reviews for #{@product.name}" %></h1>

<article class="">
  <% @reviews_by_product.each do | review | %>
    <p><%= "#{review.title}" %></p>
    <p><%= "#{review.rating}" %></p>
    <p><%= "#{review.body}" %></p>
  <% end %>
</article>

<%= link_to "Add a Review", new_product_review_path(params[:product_id]) %>
