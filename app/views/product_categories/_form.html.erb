<% if @product_category.errors.any? %>
  <ul class="errors">
    <% @product_category.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product_category, class: 'add-form', html: {class: 'form'}, url: submit_url,method: http_method do |f| %>
  <section>
    <ul class="row small-up-3 bullet-none">
      <% @all_categories.each do | category | %>
        <li class="column">
          <span class='add-space'>
            <%= check_box_tag 'category_ids[]', category.id %>
            <%= category.name %>
          </span>
        </li>
      <% end %>
    </ul>

  </section>

  <section>
    <%= f.submit "Create", class: "button"%>
  </section>

<% end %>
