<% if @product_category.errors.any? %>
  <ul class="errors">
    <% @product_category.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product_category, class: 'add-form', html: {class: 'form'}, url: submit_url,method: http_method do |f| %>
  <section>
    <% @all_categories.each do | category | -%>
      <%= fields_for 'category[]' , category do | category_fields | -%>
      <%= category.name %>
      <%= category_fields.check_box :name %>
      <% end -%>
    <% end -%>
  </section>

  <section>
    <%= f.submit "Create"%>
  </section>

<% end %>
